{
  "name": "woowoofund-app",
  "version": "0.1.0",
  "description": "A web application for WooWooFund",
  "main": "server.js",
  "author": "Jayson Ward",
  "license": "ISC",
  "scripts": {
    "lint": "eslint '*/**/*.{ts,tsx}'",
    "test": "DEBUG_PRINT_LIMIT=20000 jest --runInBand --detectOpenHandles --config jest.config.json",
    "deploy": "npm run build-production && npm run build-docker-image",
    "develop": "npm run build-development && npm run launch-development",
    "build-development": "rm -rf dist_dev && webpack --mode development --config webpack.server.config.js && webpack --mode development --config webpack.dev.config.js",
    "launch-development": "NODE_ENV=development NAMESPACE=app PORT=8080 node ./dist_dev/server.js",
    "build-production": "rm -rf dist_prod && webpack --mode production --config webpack.server.config.js && webpack --mode production --config webpack.prod.config.js",
    "launch-production": "node ./dist_prod/server.js",
    "build-docker-image": "docker build -t woowoofund/app .",
    "view-coverage-report": "open coverage/lcov-report/index.html"
  },
  "dependencies": {
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@reach/router": "^1.3.4",
    "express": "^4.17.1",
    "jwt-decode": "^2.2.0",
    "oidc-client": "^1.10.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-material-ui-carousel": "^2.2.6",
    "react-redux": "^7.2.0",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@testing-library/react": "^10.2.0",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/jwt-decode": "^2.2.1",
    "@types/node": "^14.0.11",
    "@types/react": "^16.9.25",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/webpack-dev-middleware": "^3.7.1",
    "@types/webpack-hot-middleware": "^2.25.3",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "canvas": "^2.6.1",
    "css-loader": "^3.4.2",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.19.0",
    "fetch-mock": "^9.10.3",
    "file-loader": "^6.0.0",
    "html-loader": "^1.1.0",
    "html-webpack-plugin": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.0.1",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.2",
    "source-map-loader": "^1.0.0",
    "style-loader": "^1.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5",
    "uglifyjs-webpack-plugin": "^2.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-middleware": "^3.7.2",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-node-externals": "^1.7.2"
  }
}
